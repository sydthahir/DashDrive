:
root {
    --primary-color: #4834d4;
    --secondary-color: #686de0;
    --text-color: #2d3436;
    --light-gray: #dfe6e9;
    --white: #ffffff;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

body {
    background-color: #f5f6fa;
    min-height: 100vh;
}

.container {
    display: flex;
    min-height: 100vh;
}

.registration-container {
    flex: 1;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
}

.logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.logo img {
    height: 40px;
}

.logo span {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--primary-color);
}

.registration-form {
    background-color: var(--white);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
}

.registration-form h2 {
    color: var(--text-color);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-color);
    font-size: 0.875rem;
}

.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="tel"],
.form-group input[type="password"],
.form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--light-gray);
    border-radius: 4px;
    font-size: 0.875rem;
    transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
}

.file-upload {
    border: 2px dashed var(--light-gray);
    padding: 1rem;
    border-radius: 4px;
    text-align: center;
}

.file-upload input[type="file"] {
    width: 100%;
    margin-bottom: 0.5rem;
}

.file-hint {
    display: block;
    font-size: 0.75rem;
    color: #666;
}

.terms {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
}

.terms input[type="checkbox"] {
    margin-top: 0.25rem;
}

.terms label {
    font-size: 0.875rem;
    margin-bottom: 0;
}

.register-btn {
    width: 100%;
    padding: 1rem;
    background-color: var(--primary-color);
    color: var(--white);
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 1rem;
}

.register-btn:hover {
    background-color: var(--secondary-color);
}

.login-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--text-color);
}

.login-link a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
}

.login-link a:hover {
    text-decoration: underline;
}

.illustration-container {
    flex: 1;
    background-color: var(--primary-color);
    background-image: url('https://raw.githubusercontent.com/your-repo/delivery-illustration.svg');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
}

@media (max-width: 1024px) {
    .illustration-container {
        display: none;
    }
    
    .registration-container {
        max-width: 100%;
    }
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .registration-container {
        padding: 1rem;
    }
    
    .registration-form {
        padding: 1.5rem;
    }
}