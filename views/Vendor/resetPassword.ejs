<style>
    body {
        font-family: "Montserrat", sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #faf9f6;
        padding: clamp(0.5rem, 2vw, 2rem);
        margin: 0;
    }

    .main-logo {
        position: absolute;
        top: clamp(1rem, 3vw, 2rem);
        left: clamp(1rem, 3vw, 2rem);
        font-size: clamp(1.25rem, 4vw, 2.5rem);
        font-weight: 700;
        text-decoration: none;
        color: #333333;
        z-index: 1000;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }

    .main-logo span {
        color: #8bbd76;
    }

    .reset-container {
        width: min(100% - 2rem, 450px);
        background-color: #fff;
        border-radius: clamp(15px, 2vw, 20px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: clamp(1.25rem, 4vw, 3rem);
        margin: clamp(1rem, 4vh, 3rem) auto;
    }

    .form-container {
        width: 100%;
    }

    .h3 {
        font-size: clamp(1.25rem, 4vw, 2rem);
        font-weight: 700;
        color: #333333;
        margin-bottom: clamp(0.5rem, 2vh, 1rem);
        line-height: 1.2;
    }

    .text-muted {
        font-size: clamp(0.85rem, 2vw, 0.9rem);
        color: #666;
        margin-bottom: clamp(1.5rem, 4vh, 2rem);
    }

    .form-label {
        font-weight: 600;
        font-size: clamp(0.85rem, 2vw, 0.9rem);
        color: #333333;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: clamp(0.7rem, 2vw, 1rem);
        border: 1px solid #e1e1e1;
        border-radius: clamp(8px, 1.5vw, 10px);
        font-size: clamp(0.9rem, 2vw, 0.95rem);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #8bbd76;
        box-shadow: 0 0 0 2px rgba(139, 189, 118, 0.1);
        outline: none;
    }

    .password-field {
        position: relative;
        margin-bottom: clamp(1rem, 3vh, 1.5rem);
    }

    .password-toggle {
        position: absolute;
        right: clamp(0.8rem, 2vw, 1rem);
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #666;
        padding: clamp(0.3rem, 1vw, 0.5rem);
        transition: color 0.3s ease;
        z-index: 2;
    }

    .password-toggle:hover {
        color: #8bbd76;
    }

    .error-message {
        color: #dc3545;
        font-size: clamp(0.75rem, 1.5vw, 0.85rem);
        margin-top: 0.25rem;
        display: none;
    }

    .btn-reset {
        width: 100%;
        padding: clamp(0.8rem, 2vw, 1rem);
        background-color: #333333;
        color: #fff;
        border: none;
        border-radius: clamp(8px, 1.5vw, 10px);
        font-weight: 600;
        font-size: clamp(0.9rem, 2vw, 1rem);
        transition: all 0.3s ease;
        margin-bottom: clamp(1rem, 3vh, 1.5rem);
    }

    .btn-reset:hover {
        background-color: #1a1a1a;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .text-primary {
        color: #8bbd76 !important;
        text-decoration: none;
    }

    .text-primary:hover {
        color: #7aa665 !important;
    }

    /* Desktop and large screens */
    @media (min-width: 1200px) {
        .reset-container {
            margin-top: 4rem;
        }
        .main-logo {
            font-size: 2.5rem;
        }
    }

    /* Tablets and medium screens */
    @media (max-width: 1199px) {
        .main-logo {
            position: relative;
            text-align: center;
            display: flex;
            justify-content: center;
            margin: 1rem auto;
            left: 0;
            top: 0;
            font-size: clamp(1.75rem, 3.5vw, 2.25rem);
        }
        body {
            padding-top: 1rem;
            flex-direction: column;
        }
    }

    /* Small tablets and large phones */
    @media (max-width: 767px) {
        body {
            padding: 1rem;
        }
        .reset-container {
            padding: clamp(1rem, 3vw, 1.5rem);
            margin: 0.5rem auto;
        }
        .form-control {
            padding: 0.7rem;
        }
        .password-toggle {
            padding: 0.3rem;
        }
    }

    /* Mobile phones */
    @media (max-width: 575px) {
        body {
            padding: 0.75rem;
        }
        .reset-container {
            width: 100%;
            margin: 0;
            border-radius: 10px;
        }
        .main-logo {
            font-size: clamp(1.5rem, 5vw, 1.75rem);
            margin: 0.75rem auto;
            padding: 0 0.5rem;
        }
        .h3 {
            font-size: 1.25rem;
        }
        .btn-reset {
            padding: 0.7rem;
            font-size: 0.9rem;
        }
    }

    /* Very small devices */
    @media (max-width: 320px) {
        .reset-container {
            padding: 1rem;
        }
        .form-control {
            padding: 0.6rem;
            font-size: 0.85rem;
        }
        .password-toggle {
            right: 0.5rem;
            padding: 0.2rem;
        }
    }
</style>

<body>
    <a href="/" class="main-logo">Dash<span>Drive</span></a>
    <div class="reset-container">
        <div class="form-container">
            <div class="text-center mb-4">
                <h2 class="h3">Reset Your Password</h2>
                <p class="text-muted">Enter your new password below</p>
            </div>

            <form id="resetForm" action="/vendor/reset-password" method="POST" class="needs-validation" novalidate>
                <input type="hidden" name="token" value="<%= token %>">
                
                <div class="mb-3">
                    <label for="password" class="form-label">New Password</label>
                    <div class="password-field">
                        <input type="password" class="form-control" id="password" name="password" required>
                        <span class="password-toggle" onclick="togglePassword('password')">
                            <i class="far fa-eye"></i>
                        </span>
                    </div>
                    <div id="errorPassword" class="error-message"></div>
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <div class="password-field">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        <span class="password-toggle" onclick="togglePassword('confirmPassword')">
                            <i class="far fa-eye"></i>
                        </span>
                    </div>
                    <div id="errorConfirmPassword" class="error-message"></div>

                    <% if (typeof message !== 'undefined' ) { %>
                        <div class="error-message" style="display: block">
                            <%= message %>
                        </div>
                    <% } %>
                </div>

                <button type="submit" class="btn btn-reset">Reset Password</button>

                <div class="text-center">
                    <p class="mb-0">
                        Remembered your password? <a href="/vendor/login" class="text-primary">Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>


    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Get DOM elements
        const resetForm = document.getElementById("resetForm");
        const password = document.getElementById("password");
        const confirmPassword = document.getElementById("confirmPassword");
        const errorPassword = document.getElementById("errorPassword");
        const errorConfirmPassword = document.getElementById("errorConfirmPassword");

        // Password Toggle Functionality
        function togglePassword(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const icon = event.currentTarget.querySelector("i");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // Password Validation
        function validatePassword() {
            const passVal = password.value;
            const cPassVal = confirmPassword.value;
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&])[A-Za-z\d@#$!%*?&]{8,}$/;
            let isValid = true;

            if (passVal.trim() === "") {
                errorPassword.style.display = "block";
                errorPassword.innerHTML = "Password is required";
                isValid = false;
            } else if (passVal.length < 8) {
                errorPassword.style.display = "block";
                errorPassword.innerHTML = "Password must be at least 8 characters";
                isValid = false;
            } else if (!passwordPattern.test(passVal)) {
                errorPassword.style.display = "block";
                errorPassword.innerHTML = "Password must include lowercase, uppercase, digit, and special character";
                isValid = false;
            } else {
                errorPassword.style.display = "none";
                errorPassword.innerHTML = "";
            }

            if (cPassVal.trim() === "") {
                errorConfirmPassword.style.display = "block";
                errorConfirmPassword.innerHTML = "Confirm password is required";
                isValid = false;
            } else if (passVal !== cPassVal) {
                errorConfirmPassword.style.display = "block";
                errorConfirmPassword.innerHTML = "Passwords do not match";
                isValid = false;
            } else {
                errorConfirmPassword.style.display = "none";
                errorConfirmPassword.innerHTML = "";
            }

            return isValid;
        }

        // Form Submission Event Listener
        document.addEventListener("DOMContentLoaded", function () {
            resetForm.addEventListener("submit", function (e) {
                if (!validatePassword()) {
                    e.preventDefault();
                }
            });
        });
    </script>
</body>

