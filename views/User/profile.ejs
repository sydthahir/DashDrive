                });

                // Edit Profile Button Click Handler
                document.querySelector('.edit-profile').addEventListener('click', function (e) {
                    e.preventDefault();
                    // Implement edit profile functionality
                });

                // View Bookings Button Click Handler
                document.querySelector('.view-bookings').addEventListener('click', function (e) {
                    e.preventDefault();
                    // Implement view bookings functionality
                });
            </script>
    </body>

</html>