                        </div>
                        <div
                            class="transaction-amount <%= transaction.amount > 0 ? 'amount-positive' : 'amount-negative' %>">
                            <!-- <%= transaction.amount> 0 ? '+' : '' %>₹<%= transaction.amount %> -->
                        </div>
                    </div>
                    <!-- <% }); %> -->
                </div>
            </div>
        </div>
        </div>

        <%- include('partials/footer') %>

