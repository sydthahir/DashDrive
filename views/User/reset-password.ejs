<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password - DashDrive</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
    rel="stylesheet" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/modern-style.css" />

  <!-- SweetAlert2 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

  <style>
    body {
      font-family: "Montserrat", sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background-color: #fff;
      position: relative;
      padding-top: 80px;
    }

    .main-logo {
      position: absolute;
      top: 20px;
      left: 30px;
      font-size: 3rem;
      font-weight: 700;
      text-decoration: none;
      font-family: "Montserrat", sans-serif;
      z-index: 1000;
    }

    .main-logo span {
      color: #8bbd76;
    }

    .reset-container {
      width: 100%;
      max-width: 600px;
      margin: 2rem auto;
      background-color: #f5da9a;
      border-radius: 30px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 3rem;
    }

    .form-container {
      max-width: 400px;
      margin: 0 auto;
    }

    .error-message {
      color: #dc3545;
      font-size: 0.875rem;
      margin-top: 0.25rem;
      display: none;
    }

    .form-control {
      border: 1px solid #e1e1e1;
      padding: 1rem;
      border-radius: 12px;
      font-size: 0.95rem;
      background-color: #f8f9fa;
      transition: all 0.3s ease;
      font-family: "Montserrat", sans-serif;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.1);
      background-color: #fff;
    }

    .form-label {
      font-weight: 600;
      color: #2d3436;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-reset {
      width: 100%;
      padding: 1rem;
      background-color: #333333;
      border: none;
      border-radius: 12px;
      color: #fff;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      font-family: "Montserrat", sans-serif;
    }

    .btn-reset:hover {
      background-color: #1a1a1a;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(51, 51, 51, 0.2);
    }

    .password-field {
      position: relative;
    }

    .password-toggle {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #6c757d;
      transition: color 0.3s ease;
    }

    .password-toggle:hover {
      color: #007bff;
    }

    .h3 {
      font-weight: 700;
      color: #2d3436;
      font-family: "Montserrat", sans-serif;
    }

    .text-muted {
      font-size: 0.9rem;
      letter-spacing: 1px;
    }

    @media (max-width: 992px) {
      .reset-container {
        margin: 0;
        border-radius: 0;
        padding: 2rem;
      }

      .error-message {
        font-size: 0.8rem;
      }
    }
  </style>
</head>

<body>
  <a href="/" class="main-logo text-dark text-decoration-none">Dash<span>Drive</span></a>
  <div class="reset-container">
    <div class="form-container">
      <div class="text-center mb-5">
        <h2 class="h3 mb-2">Reset Your Password</h2>
        <p class="text-muted">ENTER YOUR NEW PASSWORD</p>
      </div>

      <form id="resetForm" method="POST" class="needs-validation" novalidate>
        <input type="hidden" name="token" id="token" value="<%= token %>">
        <input type="hidden" name="email" id="email" value="<%= email %>">
        <div class="mb-4">
          <label for="password" class="form-label">New Password</label>
          <div class="password-field">
            <input type="password" class="form-control" id="password" name="password" required />
            <span class="password-toggle" onclick="togglePassword('password')">
              <i class="far fa-eye"></i>
            </span>
          </div>
          <div id="errorPassword" class="error-message"></div>
        </div>

        <div class="mb-5">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <div class="password-field">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
            <span class="password-toggle" onclick="togglePassword('confirmPassword')">
              <i class="far fa-eye"></i>
            </span>
          </div>
          <div id="errorConfirmPassword" class="error-message"></div>

          <% if (typeof message !=='undefined' ) { %>
            <p style="color: red">
              <%= message %>
            </p>
            <% } %>
        </div>

        <button type="submit" class="btn btn-reset mb-4">Reset Password</button>

        <div class="text-center">
          <p class="mb-0">
            Remembered your password? <a href="/login" class="text-primary fw-bold">Login</a>
          </p>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
  <script>
    const resetForm = document.getElementById("resetForm");
    const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const errorPassword = document.getElementById("errorPassword");
    const errorConfirmPassword = document.getElementById("errorConfirmPassword");
    const token = document.querySelector('input[name="token"]').value;
    const email = document.querySelector('input[name="email"]').value;

    function togglePassword(fieldId) {
      const passwordField = document.getElementById(fieldId);
      const icon = event.currentTarget.querySelector("i");
      if (passwordField.type === "password") {
        passwordField.type = "text";
        icon.classList.remove("fa-eye");
        icon.classList.add("fa-eye-slash");
      } else {
        passwordField.type = "password";
        icon.classList.remove("fa-eye-slash");
        icon.classList.add("fa-eye");
      }
    }

    function validatePassword() {
      const passVal = password.value;
      const cPassVal = confirmPassword.value;
      const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&])[A-Za-z\d@#$!%*?&]{8,}$/;
      let isValid = true;

      if (!passVal.trim()) {
        errorPassword.style.display = "block";
        errorPassword.innerHTML = "Password is required";
        isValid = false;
      } else if (passVal.length < 8) {
        errorPassword.style.display = "block";
        errorPassword.innerHTML = "Password must be at least 8 characters";
        isValid = false;
      } else if (!passwordPattern.test(passVal)) {
        errorPassword.style.display = "block";
        errorPassword.innerHTML = "Password must include lowercase, uppercase, digit, and special character";
        isValid = false;
      } else {
        errorPassword.style.display = "none";
      }

      if (!cPassVal.trim()) {
        errorConfirmPassword.style.display = "block";
        errorConfirmPassword.innerHTML = "Confirm password is required";
        isValid = false;
      } else if (passVal !== cPassVal) {
        errorConfirmPassword.style.display = "block";
        errorConfirmPassword.innerHTML = "Passwords do not match";
        isValid = false;
      } else {
        errorConfirmPassword.style.display = "none";
      }

      return isValid;
    }

    resetForm.addEventListener("submit", function (e) {
      e.preventDefault();

      if (!validatePassword()) {
        return;
      }

      const formData = {
        token: token,
        email: email,
        password: password.value,
        confirmPassword: confirmPassword.value
      };

      $.ajax({
        type: "POST",
        url: "/reset-password",
        data: formData,
        success: function (response) {
          if (response.success) {
            Swal.fire({
              icon: "success",
              title: "Password Reset",
              text: "Your password has been successfully reset",
              showConfirmButton: false,
              timer: 1500
            }).then(() => {
              window.location.href = "/login";
            });
          }
        },
        error: function (xhr) {
          const errorMessage = xhr.responseJSON?.message || "An error occurred";
          Swal.fire({
            icon: "error",
            title: "Reset Failed",
            text: errorMessage
          });
        }
      });
    });
  </script>
</body>