<%- include("../partials/admin/header.ejs") %>

<div class="container-fluid py-4">
    <div class="row">
        <main role="main" class="col-12 px-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Dashboard > Vendors</li>
                </ol>
            </nav>

            <!-- Page Title and Pending Vendors Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Registered Vendors</h4>
                <a href="/admin/pending-vendors" class="btn btn-primary">
                    <i class="fas fa-clock me-1"></i> View Pending Vendors
                </a>
            </div>

            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #0d6efd;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-users fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">Total Vendors</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= totalVendors %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #198754;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-user-check fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">Active Vendors</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= activeVendors %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #0dcaf0;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-user-plus fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">New Vendors (This Month)</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= newVendors %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vendors Table -->
            <div class="card border-0 rounded-3 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6 col-lg-4 mx-auto">
                            <div class="input-group input-group-sm border border-1 border-grey rounded-pill">
                                <input type="text" class="form-control border-0 rounded-pill" placeholder="Search vendors..." name="search">
                                <button class="btn border-0" type="submit">Search</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr class="bg-light">
                                    <th class="px-4 py-3">#</th>
                                    <th class="px-4 py-3">Name</th>
                                    <th class="px-4 py-3">Email</th>
                                    <th class="px-4 py-3 d-none d-md-table-cell">Phone</th>
                                    <th class="px-4 py-3">Status</th>
                                    <th class="px-4 py-3 d-none d-lg-table-cell">Joined</th>
                                    <th class="px-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (vendors && vendors.length > 0) { %>
                                    <% vendors.forEach((vendor, index) => { %>
                                        <tr>
                                            <td class="px-4 py-3"><%= (currentPage - 1) * 3 + index + 1 %></td>
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-xs me-2">
                                                        <span class="avatar-title rounded-circle bg-primary-subtle text-primary">
                                                            <%= vendor.fullName ? vendor.fullName.charAt(0).toUpperCase() : 'V' %>
                                                        </span>
                                                    </div>
                                                    <%= vendor.fullName || 'Unknown Vendor' %>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3"><%= vendor.email || 'N/A' %></td>
                                            <td class="px-4 py-3 d-none d-md-table-cell"><%= vendor.phone || 'N/A' %></td>
                                            <td class="px-4 py-3">
                                                <% if (vendor.isBlocked) { %>
                                                    <span class="badge bg-danger">Blocked</span>
                                                <% } else { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } %>
                                            </td>
                                            <td class="px-4 py-3 d-none d-lg-table-cell">
                                                <%= vendor.createdAt ? new Date(vendor.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) : 'N/A' %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <button class="btn btn-sm btn-info" onclick="viewVendorDetails('<%= vendor._id %>')">
                                                        <i class="fas fa-eye"></i> View
                                                    </button>
                                                    <% if (vendor.isBlocked) { %>
                                                        <button class="btn btn-sm btn-success toggle-btn" data-id="<%= vendor._id %>" data-action="unblock">
                                                            <i class="fas fa-unlock"></i> Unblock
                                                        </button>
                                                    <% } else { %>
                                                        <button class="btn btn-sm btn-danger toggle-btn" data-id="<%= vendor._id %>" data-action="block">
                                                            <i class="fas fa-ban"></i> Block
                                                        </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center">No approved vendors found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="card-footer bg-white py-3">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0">
                                <% if (hasPrevPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                            <span aria-hidden="true">Â«</span>
                                        </a>
                                    </li>
                                <% } %>
                                <% for(let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (hasNextPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                            <span aria-hidden="true">Â»</span>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function viewVendorDetails(vendorId) {
        window.location.href = `/admin/vendors/${vendorId}`;
    }

    document.addEventListener('DOMContentLoaded', () => {
        const toggleButtons = document.querySelectorAll('.toggle-btn');

        toggleButtons.forEach(button => {
            button.addEventListener('click', async (e) => {
                const vendorId = e.currentTarget.getAttribute('data-id');
                const action = e.currentTarget.getAttribute('data-action');
                const url = `/admin/vendors/${action}`;

                try {
                    console.log(`Sending ${action} request for vendor ID:`, vendorId);

                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';

                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            ...(csrfToken && { 'X-CSRF-Token': csrfToken })
                        },
                        credentials: 'include',
                        body: JSON.stringify({ id: vendorId })
                    });

                    console.log('Response status:', response.status);
                    console.log('Response headers:', [...response.headers.entries()]);

                    const contentType = response.headers.get('content-type');
                    if (!contentType || !contentType.includes('application/json')) {
                        const text = await response.text();
                        console.error('Non-JSON response received:', text.substring(0, 500));
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Server returned an unexpected response. Check console for details.',
                        });
                        return;
                    }

                    const data = await response.json();
                    console.log('Server response:', data);

                    if (response.ok && data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        });

                        const statusBadge = button.closest('tr').querySelector('.badge');
                        if (action === 'block') {
                            button.classList.remove('btn-danger');
                            button.classList.add('btn-success');
                            button.setAttribute('data-action', 'unblock');
                            button.innerHTML = '<i class="fas fa-unlock"></i> Unblock';
                            statusBadge.classList.remove('bg-success');
                            statusBadge.classList.add('bg-danger');
                            statusBadge.textContent = 'Blocked';
                        } else {
                            button.classList.remove('btn-success');
                            button.classList.add('btn-danger');
                            button.setAttribute('data-action', 'block');
                            button.innerHTML = '<i class="fas fa-ban"></i> Block';
                            statusBadge.classList.remove('bg-danger');
                            statusBadge.classList.add('bg-success');
                            statusBadge.textContent = 'Active';
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Failed to process request',
                        });
                    }
                } catch (error) {
                    console.error('Fetch error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: `An error occurred: ${error.message}`,
                    });
                }
            });
        });
    });
</script>

<%- include("../partials/admin/footer.ejs") %>