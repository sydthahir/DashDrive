<%- include("../partials/admin/header.ejs") %>

    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                <!-- Page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0">Registered Vendors</h4>
                            <div class="page-title-right">
                                <a href="/admin/pending-vendors" class="btn btn-primary">
                                    <i class="fas fa-clock me-1"></i> View Pending Vendors
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Vendors table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Phone</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Joined</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (vendors && vendors.length> 0) { %>
                                                <% vendors.forEach((vendor, index)=> { %>
                                                    <% if (vendor.isApproved) { %>
                                                        <tr>
                                                            <td>
                                                                <%= index + 1 %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <div class="avatar-xs me-2">
                                                                        <span
                                                                            class="avatar-title rounded-circle bg-primary-subtle text-primary">
                                                                            <%= vendor.fullName ?
                                                                                vendor.fullName.charAt(0).toUpperCase()
                                                                                : 'V' %>
                                                                        </span>
                                                                    </div>
                                                                    <%= vendor.fullName || 'Unknown Vendor' %>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <%= vendor.email || 'N/A' %>
                                                            </td>
                                                            <td>
                                                                <%= vendor.phone || 'N/A' %>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-success">Active</span>
                                                            </td>
                                                            <td>
                                                                <%= vendor.createdAt ? new
                                                                    Date(vendor.createdAt).toLocaleDateString('en-US', {
                                                                    day: 'numeric' , month: 'short' , year: 'numeric' })
                                                                    : 'N/A' %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <button class="btn btn-sm btn-info"
                                                                        onclick="viewVendorDetails('<%= vendor._id %>')">
                                                                        <i class="fas fa-eye"></i> View
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                            <% }); %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="7" class="text-center">No approved
                                                                            vendors found</td>
                                                                    </tr>
                                                                    <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function viewVendorDetails(vendorId) {
            window.location.href = `/admin/vendors/${vendorId}`;
        }
    </script>

    <%- include("../partials/admin/footer.ejs") %>