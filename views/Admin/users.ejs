<%- include("../partials/admin/header.ejs") %>

<div class="container-fluid py-4">
    <div class="row">
        <main role="main" class="col-12 px-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Dashboard > Users </li>
                </ol>
            </nav>

            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #0d6efd;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-users fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">Total Users</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= totalUsers %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #198754;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-user-check fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">Active Users</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= activeUsers %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 border-0 rounded-3" style="background-color: #0dcaf0;">
                        <div class="card-body d-flex align-items-center py-4">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-user-plus fa-2x text-white me-4"></i>
                                <div>
                                    <h6 class="text-white mb-2 fs-sm">New Users (This Month)</h6>
                                    <h3 class="text-white mb-0 fs-2"><%= newUsers %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card border-0 rounded-3 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6 col-lg-4 mx-auto">
                            <div class="input-group input-group-sm border border-1 border-grey rounded-pill">
                                <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search">
                                <button class="btn border-0" type="submit">Search</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr class="bg-light">
                                    <th class="px-4 py-3">User ID</th>
                                    <th class="px-4 py-3">Name</th>
                                    <th class="px-4 py-3 d-none d-md-table-cell">Email</th>
                                    <th class="px-4 py-3 d-none d-lg-table-cell">Join Date</th>
                                    <th class="px-4 py-3">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td class="px-4 py-3"><%= user._id %></td>
                                        <td class="px-4 py-3"><%= user.name %></td>
                                        <td class="px-4 py-3 d-none d-md-table-cell"><%= user.email %></td>
                                        <td class="px-4 py-3 d-none d-lg-table-cell">
                                            <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="d-flex gap-2 flex-wrap">
                                                <button class="btn btn-sm btn-primary px-3">
                                                    <i class="fas fa-eye d-sm-none"></i>
                                                    <span class="d-none d-sm-inline"><i class="fas fa-eye me-2"></i>View</span>
                                                </button>
                                                <% if(user.isBlocked) { %>
                                                    <button class="btn btn-success toggle-btn" style="width: 80px;" data-id="<%= user._id %>" data-action="unblock">
                                                        <span class="text-white" style="text-decoration: none;">Unblock</span>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-danger toggle-btn" style="width: 80px;" data-id="<%= user._id %>" data-action="block">
                                                        <span class="text-white" style="text-decoration: none;">Block</span>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="card-footer bg-white py-3">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0">
                                <% if (hasPrevPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                            <span aria-hidden="true">«</span>
                                        </a>
                                    </li>
                                <% } %>
                                <% for(let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (hasNextPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                            <span aria-hidden="true">»</span>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Modal for User Details -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 rounded-3">
            <div class="modal-header border-0">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- User details will be loaded here -->
            </div>
        </div>
    </div>
</div>

<%- include("../partials/admin/footer.ejs") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleButtons = document.querySelectorAll('.toggle-btn');

        toggleButtons.forEach(button => {
            button.addEventListener('click', async (e) => {
                const userId = e.currentTarget.getAttribute('data-id');
                const action = e.currentTarget.getAttribute('data-action');
                const url = action === 'block' ? '/admin/users/block' : '/admin/users/unblock';

                try {
                    console.log(`Sending ${action} request for user ID:`, userId);
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify({ id: userId })
                    });

                    // Check if response is JSON
                    const contentType = response.headers.get('content-type');
                    if (!contentType || !contentType.includes('application/json')) {
                        const text = await response.text();
                        console.error('Non-JSON response received:', text.substring(0, 200)); // Log first 200 chars
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Server returned an unexpected response. Check console for details.',
                        });
                        return;
                    }

                    const data = await response.json();
                    console.log('Server response:', data);

                    if (response.ok && data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        });

                        // Update button appearance
                        if (action === 'block') {
                            button.classList.remove('btn-danger');
                            button.classList.add('btn-success');
                            button.setAttribute('data-action', 'unblock');
                            button.querySelector('span').textContent = 'Unblock';
                        } else {
                            button.classList.remove('btn-success');
                            button.classList.add('btn-danger');
                            button.setAttribute('data-action', 'block');
                            button.querySelector('span').textContent = 'Block';
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Failed to process request',
                        });
                    }
                } catch (error) {
                    console.error('Fetch error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: `An error occurred: ${error.message}`,
                    });
                }
            });
        });
    });
</script>